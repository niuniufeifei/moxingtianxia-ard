<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/layout_middle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:stretchColumns="1"
        android:background="@drawable/rectangle_gray_shape"
        android:orientation="vertical">
        <!--地址-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="2">
                <TextView
                    android:id="@+id/tv_address_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/address_num"/>
                <TextView
                    android:id="@+id/tv_address_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/chat"
                    android:text="@string/modify"/>
            </RelativeLayout>
        </TableRow>

        <!--收货人-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_consignee_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:text="@string/consignee"/>
            <TextView
                android:id="@+id/tv_consignee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:layout_weight="1"/>
        </TableRow>

        <!--联系方式-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_contact_way_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:text="@string/contact_way"/>
            <TextView
                android:id="@+id/tv_contact_way"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:layout_weight="1"/>
        </TableRow>

        <!--邮编-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_post_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:text="@string/post_code"/>
            <TextView
                android:id="@+id/tv_post_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:layout_weight="1"/>
        </TableRow>

        <!--收货地址-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shopping_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:text="@string/shopping_address"/>
            <TextView
                android:id="@+id/tv_shopping_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rectangle_gray_shape"
                android:layout_weight="1"/>
        </TableRow>

        <!--默认"地址"-->
        <TableRow
            android:id="@+id/tr_default_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_gray_shape"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_default_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_select_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/dot_focus"/>

                    <TextView
                        android:id="@+id/tv_default_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="@string/default_address"/>
                </LinearLayout>

            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>
