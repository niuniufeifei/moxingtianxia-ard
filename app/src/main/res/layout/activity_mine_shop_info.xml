<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:txttxtBtnView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/home_page_red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/shop_info"
            android:textColor="@color/ghost_white"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_photo"
        android:layout_width="fill_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true" >

            <com.dgzd.mxtx.custom.CircleImageView
                android:id="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/default_photo"/>

            <TextView
                android:id="@+id/tv_upload_shop_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/upload_store_face"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_shop_name"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/ghost_white">

        <com.dgzd.mxtx.custom.TxtTxtBtn
            android:id="@+id/txttxtbtn_my_nickname"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            txttxtBtnView:text_title="@string/shop_name2"
            txttxtBtnView:text_content="@string/shop_name_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/next" />
    </RelativeLayout>

</LinearLayout>
